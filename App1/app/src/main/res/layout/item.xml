<!-- res/layout/list_item_layout.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Trường dữ liệu thứ nhất -->
    <TextView
        android:id="@+id/textFieldMaNV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <!-- Trường dữ liệu thứ hai -->
    <TextView
        android:id="@+id/textFieldTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/textFieldMaNV"
        android:layout_marginTop="8dp"/>

    <!-- Trường dữ liệu thứ ba -->
    <TextView
        android:id="@+id/textFieldDd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/textFieldTen"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
