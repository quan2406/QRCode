<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"

    tools:context=".HIenThiThongTin">

    <TextView
        android:id="@+id/textViewMaNV"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="44dp"
        android:text="Mã NV"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHoTen"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="32dp"
        android:textSize="25dp"
        android:text="Họ Tên"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMaNV" />

    <TextView
        android:id="@+id/textViewGioiTinh"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="28dp"
        android:textSize="25dp"
        android:text="Ngày Sinh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHoTen" />

    <TextView
        android:id="@+id/textViewabc"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="60dp"
        android:text="Mã QR"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGioiTinh" />

    <ImageView
        android:id="@+id/imageViewQR"
        android:layout_width="256dp"
        android:layout_height="225dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewabc"
        app:srcCompat="@drawable/ic_launcher_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>
