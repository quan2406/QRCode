<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/snapedit_1699811681012"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewAboveEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="40dp"
        android:text=" Xem thông tin nhân viên"
        android:textAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
        android:textColor="#0C0C0C"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTop" />

    <TextView
        android:id="@+id/textViewAboveEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="72dp"
        android:text=" Mã nhân viên "
        android:textColor="#0C0C0C"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAboveEditText" />

    <Button
        android:id="@+id/buttonXemTT"
        android:layout_width="222dp"
        android:layout_height="71dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="92dp"
        android:text="Tra cứu nhân viên"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextmaNV" />

    <EditText
        android:id="@+id/editTextmaNV"
        android:layout_width="133dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textViewAboveEditText2"
        app:layout_constraintTop_toBottomOf="@+id/textViewAboveEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>
